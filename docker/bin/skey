#!/bin/bash
#set -eo pipefail
if [ -z "$@" ] ; then
	situation="/"
else
	situation="$@"
fi

shopt -s nullglob
IFS=$'\n'
#export ETCDCTL_ENDPOINTS=http://keystore.toonces:2379
BGreen='\e[1;32m'       # Green
BBlue='\e[1;34m'        # Blue
BWhite='\e[1;37m'       # White
Black='\e[0;30m'        # Black
BBlack='\e[1;30m'       # Black
On_Black='\e[40m'       # Black
On_Red='\e[41m'         # Red
On_Green='\e[42m'       # Green
On_Yellow='\e[43m'      # Yellow
On_Blue='\e[44m'        # Blue
On_Purple='\e[45m'      # Purple
On_Cyan='\e[46m'        # Cyan
On_White='\e[47m'       # White
ALERT=${BWhite}${On_Red} # Bold White on red background
NC="\e[m"               # Color Reset

INKEYS=($(etcdctl ls --sort --recursive ${situation}))
for (( i=0; i<${#INKEYS[@]}; i++ )) ; do
    tfile="${INKEYS[$i]}"
    thesit=$( echo "$tfile" | cut -d '/' -f 2-)
vals=$(etcdctl get $tfile 2> /dev/null)
if [ $? -eq 0 ] ; then
    echo -e "${BBlue}${thesit}${NC} => ${BGreen}${vals}${NC}"
    tput el
else
	tput el
fi
done

